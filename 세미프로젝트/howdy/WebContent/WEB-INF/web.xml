<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <!-- 모임정보연결 -->
  <servlet>
  	<servlet-name>howdy</servlet-name>
  	<servlet-class>controller.GroupAddController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>howdy</servlet-name>
  	<url-pattern>/howdy</url-pattern>
  </servlet-mapping>
  <!-- 모임찾기정보연결 -->
  <servlet>
  	<servlet-name>control</servlet-name>
  	<servlet-class>controller.GroupController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>control</servlet-name>
  	<url-pattern>/control</url-pattern>
  </servlet-mapping>
   <!-- 일정정보연결 -->
  <servlet>
    <servlet-name>meet</servlet-name>
    <servlet-class>controller.MeetingController</servlet-class>
  </servlet>
 
  <servlet-mapping>
    <servlet-name>meet</servlet-name>
    <url-pattern>/meet</url-pattern>
  </servlet-mapping>
  <!-- 회원정보연결 -->
  <servlet>
	<servlet-name>member</servlet-name>
	<servlet-class>controller.MemberController</servlet-class>
  </servlet>

  <servlet-mapping>
 	<servlet-name>member</servlet-name>
 	<url-pattern>/member</url-pattern>
  </servlet-mapping>
  
  <!-- 후기정보연결 -->
  <servlet>
    <servlet-name>ReviewController</servlet-name>
    <servlet-class>controller.ReviewController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReviewController</servlet-name>
    <url-pattern>/ReviewController</url-pattern>
  </servlet-mapping>
  
  <!-- 모임가입자정보 연결 --> 
  <servlet>
    <servlet-name>GroupMemberController</servlet-name>
    <servlet-class>controller.GroupMemberController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GroupMemberController</servlet-name>
    <url-pattern>/GroupMemberController</url-pattern>
  </servlet-mapping>
  
  <servlet>
	<servlet-name>Bbs</servlet-name>
	<servlet-class>controller.BbsController</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>Bbs</servlet-name>
	<url-pattern>/Bbs</url-pattern> 
  </servlet-mapping>
  
</web-app>